citHeader("To cite package 'pROC' in publications use:")
     
desc <- packageDescription("pROC")
title <- paste(desc$Title, ": ", desc$Description, sep="")
year <- substr(desc$Date, 1, 4)
version <- desc$Version


citEntry(entry="Manual",
         title = title,
         author = personList(as.person("Xavier Robin"), as.person("Natacha Turck") , as.person("Alexandre Hainard") , as.person("Natalia Tiberti") , as.person("Frédérique Lisacek") , as.person("Jean-Charles Sanchez"), as.person("Markus Müller")),
         year = year,
         note = paste("R package version", desc$Version),
         textVersion = paste("Xavier Robin, Natacha Turck, Jean-Charles Sanchez and Markus Müller (", year, "). ", title, " R package version ", version, ".", sep="")
         )

